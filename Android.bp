filegroup {
    name: "FlamingoSystemUI_src",
    srcs: [
        "src/**/*.kt",
        "src/**/*.java",
    ],
}

genrule {
    name: "FlamingoSystemUI_res",
    tools: [
        "soong_zip",
    ],
    srcs: [
        "res/**/*",
    ],
    out: [
        "FlamingoSystemUI_res.zip",
    ],
    cmd: "INPUTS=($(in)) && "
        + "RES_DIR=$$(dirname $$(dirname $${INPUTS[0]})) && "
        + "$(location soong_zip) -o $(out) -C $$RES_DIR -D $$RES_DIR"
}

filegroup {
    name: "FlamingoSystemUI_manifest",
    srcs: [
        "AndroidManifest.xml",
    ],
}

filegroup {
    name: "FlamingoSystemUI_proguard_flags",
    srcs: [
        "proguard.flags",
    ],
}
